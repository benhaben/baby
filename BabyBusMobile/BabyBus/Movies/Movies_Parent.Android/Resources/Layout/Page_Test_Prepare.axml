<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/child_head"
                    android:src="@drawable/test_child_head" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/child_head"
                    android:src="@drawable/round"
                    android:layout_marginLeft="-80dp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/child_name"
                    android:layout_marginLeft="5dp"
                    android:text="萌宝宝"
                    android:textSize="18dp"
                    android:textColor="@color/bb_black1"
                    android:background="@android:color/background_light"
                    local:MvxBind="Text ChildName" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="　　为了保证您家宝宝测评结果的准确性，请您确认您家宝宝的姓名，性别，出生日期，身高和体重。确认无误后，请点击下一步查看测试报告："
                android:textSize="18dp"
                android:textColor="@color/bb_black1"
                android:padding="5dp"
                android:background="@drawable/background_test_prepare"
                android:layout_marginRight="10dp"
                android:lineSpacingMultiplier="1.2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="18dp"
                    android:textColor="@color/bb_black1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="right">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:id="@+id/selected_boy">
                            <ImageView
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:maxWidth="23dp"
                                android:maxHeight="23dp"
                                android:src="@drawable/icon_test_boy_unselected"
                                android:id="@+id/icon_boy" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="男宝宝"
                                android:textSize="16dp"
                                android:textColor="@color/bb_black1"
                                android:id="@+id/text_boy" />
                        </LinearLayout>
                        <View
                            android:background="@color/bb_black1"
                            android:layout_width="100dp"
                            android:layout_height="3.0dp"
                            android:id="@+id/line_boy" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/selected_girl">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:maxWidth="23dp"
                                android:maxHeight="23dp"
                                android:src="@drawable/icon_test_girl_selected"
                                android:id="@+id/icon_girl" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="女宝宝"
                                android:textSize="16dp"
                                android:id="@+id/text_girl"
                                android:textColor="@color/bb_green" />
                        </LinearLayout>
                        <View
                            android:background="@color/bb_green"
                            android:layout_width="100dp"
                            android:layout_height="3.0dp"
                            android:id="@+id/line_girl" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="体重：(Kg)"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/bb_gray1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/child_weight"
                        android:textSize="18dp"
                        local:MvxBind="Text Weight"
                        android:background="@drawable/button_bar_blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="身高：(CM)"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/bb_gray1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:padding="3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/child_height"
                        local:MvxBind="Text Height"
                        android:background="@drawable/button_bar_blue" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:textColor="@color/bb_gray1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/background_child_birthday"
                    android:text="2015年10月20日"
                    android:id="@+id/child_birthday"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/bb_gray1"
                    local:MvxBind="Text ChildBirthday" />
            </LinearLayout>
        <!--            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="140dp"
                android:text="更新"
                android:textSize="18dp"
                android:id="@+id/updamessage"
                android:visibility="gone" />-->
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="下一步"
            android:textSize="20dp"
            android:id="@+id/next"
            android:textColor="@android:color/background_light"
            android:background="@color/bb_green" />
    </LinearLayout>
</LinearLayout>